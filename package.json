{
  "name": "thepress",
  "version": "1.0.0",
  "description": "Tema em branco para acelerar o desenvolvimento de sites com WordPress",
  "main": "index.js",
  "scripts": {
    "styles": "node-sass -o assets/css assets/scss",
    "scripts": "mkdirp -p assets/js && concat -o assets/js/all.js assets/js/file1.js assets/js/file2.js",
    "watch:styles": "onchange \"assets/scss\" -- npm run styles",
    "watch:scripts": "onchange \"assets/js\" -- npm run scripts",
    "server": "browser-sync start --proxy 'http://localhost:4500/thepress/' --files '**/*' --no-inject-changes",
    "dev": "npm-run-all -p watch:styles watch:scripts server"
  },
  "keywords": [
    "bootstrap 4",
    "WordPress"
  ],
  "author": "Anderson Nascimento",
  "license": "MIT",
  "devDependencies": {
    "concat": "^1.0.3",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0"
  }
}
